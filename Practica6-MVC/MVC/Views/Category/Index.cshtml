@model List<MVC.Models.CategoriesView>
@{
    ViewBag.Title = "Index";
}

<h2>Listado de Categories</h2>
<br />
<div>
    @Html.ActionLink("Insertar nueva categoria", "Insert", null, new { @class = "btn btn-primary" })
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var category in Model)
        {
            <tr id="category-@category.Id">
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="deleteCategory(@category.Id)">
                        Eliminar
                    </button>
                    <a href="@Url.Action("Update", "Category", new { id = category.Id })" class="btn btn-primary">
                        Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
        });

        function deleteCategory(id) {
            Swal.fire({
                title: 'Esta Seguro?',
                text: "Esta acción no se puede revertir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si, Borrar!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    confirmDelete(id);
                    Swal.fire(
                        'Borrada!',
                        'La Categoría ha sido borrada.',
                        'success'
                    )
                } else {
                    Swal.fire(
                        'Error!',
                        'La Categoría no ha sido borrada.',
                        'error'
                    )
                }
            })
        }

        function confirmDelete(id) {
            $.ajax({
                url: '@Url.Action("Delete", "Category")',
                method: 'POST',
                data: { id: id },
                dataType: 'json',
                success: function (data) {
                    if (data.success) {
                        $('#category-' + id).remove();
                    }
                },
                error: function (error) {
                    console.log("ERROR", error)
                }
            });
        }

    </script>
}